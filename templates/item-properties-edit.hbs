<div class="standard-form">
    <div class="standard-form scrollable">
        <input id="custom-dnd5e-system" name="{{key}}.system" type="hidden" value="{{#if (customDnd5eBoolFalse system)}}false{{else}}true{{/if}}">
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.key"}}</label>
            <div class="form-fields">
                {{#if (customDnd5eBoolFalse system)}}
                <input id="custom-dnd5e-key" name="{{key}}.key" type="text" value="{{localize key}}">
                {{else}}
                <input id="custom-dnd5e-disabled-key" disabled name="{{key}}.disabledKey" type="text" value="{{localize key}}">
                <input id="custom-dnd5e-key" name="{{key}}.key" type="hidden" value="{{localize key}}">
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.label"}}</label>
            <div class="form-fields">
                <input id="custom-dnd5e-label" name="{{key}}.label" type="text" value="{{localize label}}">
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.abbreviation"}}</label>
            <div class="form-fields">
                <input id="custom-dnd5e-abbreviation" name="{{key}}.abbreviation" type="text" value="{{localize abbreviation}}">
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.icon"}}</label>
            <div class="form-fields">
                <file-picker id="custom-dnd5e-icon" name="{{key}}.icon" type="image" value="{{icon}}"></file-picker>
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.physical"}}</label>
            <div class="form-fields">
                <input id="custom-dnd5e-is-physical" name="{{key}}.isPhysical" type="checkbox"{{#if isPhysical}} checked{{/if}}>
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.tag"}}</label>
            <div class="form-fields">
                <input id="custom-dnd5e-is-tag" name="{{key}}.isTag" type="checkbox"{{#if isTag}} checked{{/if}}>
            </div>
        </div>
        <div class="form-group">
            <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.reference"}}</label>
            <div class="form-fields">
                <input id="custom-dnd5e-reference" name="{{key}}.reference" type="text" value="{{reference}}">
            </div>
        </div>
        <div class="form-group stacked checkbox-grid">
            <label style="flex: 0 0 100%;">{{localize "CUSTOM_DND5E.itemTypes"}}</label>
            <div class="form-fields">
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-consumable" name="{{key}}.consumable"{{#if consumable}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.consumable"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-container" name="{{key}}.container"{{#if container}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.container"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-equipment" name="{{key}}.equipment"{{#if equipment}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.equipment"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-feat" name="{{key}}.feat"{{#if feat}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.feat"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-loot" name="{{key}}.loot"{{#if loot}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.loot"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-spell" name="{{key}}.spell"{{#if spell}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.spell"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-tool" name="{{key}}.tool"{{#if tool}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.tool"}}</span>
                </label>
                <label class="checkbox">
                    <dnd5e-checkbox id="custom-dnd5e-weapon" name="{{key}}.weapon"{{#if weapon}} checked{{/if}}></dnd5e-checkbox>
                    <span>{{localize "CUSTOM_DND5E.weapon"}}</span>
                </label>
            </div>
        </div>
    </div>
    {{> "modules/custom-dnd5e/templates/footer.hbs" system=system}}
</div>